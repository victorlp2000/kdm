<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.wel.kangmeida.activity.XZActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/rl_fanhui"
            android:layout_width="48dp"
            android:layout_height="48dp">

            <ImageView
                android:id="@+id/iv_fanhui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="30dp"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/fanhui_hei" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/rl_fanhui"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:text="@string/shuimian"
            android:textColor="#595959"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/rl_fanhui"
            android:layout_marginTop="18dp"
            android:background="@color/gainsboro" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_shuimian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="16dp"
            android:src="@mipmap/shuimians" />

        <TextView
            android:id="@+id/tv_shuimian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/iv_shuimian"
            android:text="@string/shumianzhaungtai"
            android:textSize="16sp"
            android:textColor="#595959" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/xyHistoryMultiLineChart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="17dp"
        android:orientation="vertical"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp">

        <TextView
            android:id="@+id/tv_shuimianshijian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:text="@string/shuimianshijian"
            android:textColor="#595959"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_likaishuichuang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_shuimianshijian"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="16dp"
            android:text="@string/likaishuichaung"
            android:textColor="#595959"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_shuimianxiaolv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_likaishuichuang"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="16dp"
            android:text="@string/shumianxiaolv"
            android:textColor="#595959"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_shuimianbuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_shuimianxiaolv"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="16dp"
            android:text="@string/shuimianbuan"
            android:textColor="#595959"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_dahulu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_shuimianbuan"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="16dp"
            android:text="@string/dahulu"
            android:textColor="#595959"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_rushuishijian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="176dp"
            android:text="@string/rushuishijian"
            android:textColor="#595959"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_xing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_rushuishijian"
            android:layout_marginLeft="176dp"
            android:layout_marginTop="16dp"
            android:text="@string/xing"
            android:textColor="#595959"
            android:textSize="16sp" />
    </RelativeLayout>

</LinearLayout>
