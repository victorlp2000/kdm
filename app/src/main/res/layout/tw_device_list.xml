<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/twDeviceListTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titleBar_height_dimen"
        android:layout_alignParentTop="true"
        android:background="@color/titleBar_bg_color"
        android:baselineAligned="false"
        android:gravity="center_vertical" >
        <RelativeLayout
            android:id="@+id/rl_fanhui"
            android:layout_width="48dp"
            android:layout_height="48dp">
            <ImageView
                android:id="@+id/iv_celiang_fanhui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/fanhui_hei"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <View
            android:layout_width="10dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/twDeviceListLabel"
                android:textColor="@color/titleBar_textColor_color"
                android:textSize="@dimen/titleBar_text_size_dimen" />
        </LinearLayout>

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/twIRLabel1"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/twDeviceListTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/bottomBar_bg_color"
        android:gravity="center_horizontal"
        android:onClick="selectTWDevice"
        android:orientation="vertical"
        android:paddingTop="15dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/twDeviceIr"
            android:textSize="15sp" />
    </LinearLayout>

</RelativeLayout>